<?xml version="1.0" encoding="utf-8" ?>
<base:CustomContentPage x:Class="ToolbarIconsIssue.MainPage"
                        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:base="clr-namespace:ToolbarIconsIssue.Views.Base"
                        xmlns:constants="clr-namespace:ToolbarIconsIssue.Constants">

    <base:CustomContentPage.ToolbarItems>

        <ToolbarItem Priority="2" Text="Search">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="{x:Static constants:MaterialIcons.FontName}"
                                 Glyph="{x:Static constants:MaterialIcons.Search}"
                                 Size="40"
                                 Color="Black" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>

    </base:CustomContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Margin="25" Spacing="25">

            <Label HorizontalOptions="Center"
                   Text="Welcome to .NET MAUI!"
                   VerticalOptions="Center" />

            <Button x:Name="DashboardBtn"
                    Clicked="DashboardBtn_Clicked"
                    Text="Dashboard" />

        </VerticalStackLayout>
    </ScrollView>

</base:CustomContentPage>
